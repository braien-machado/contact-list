generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:123456@172.17.0.1:3002/contact_list_db"
}

model Contact {
  id  Int @id @default(autoincrement())
  fullName String
  phoneNumbers Phone[]
  emails Email[]
}

model Phone {
  id  Int @id @default(autoincrement())
  phoneNumber String @unique
  whatsapp Boolean @default(false)
  owner Contact @relation(fields: [ownerId], references: [id])
  ownerId Int
}

model Email {
  id  Int @id @default(autoincrement())
  email String @unique
  owner Contact @relation(fields: [ownerId], references: [id])
  ownerId Int
}
